# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
GUILD_ID=your_guild_id_here

# DM Role (optional - restricts certain commands to users with this role)
DM_ROLE_ID=your_dm_role_id_here

# Bot Behavior
MEEPO_HOME_TEXT_CHANNEL_ID=your_channel_id_here
BOT_PREFIX=meepo:
LATCH_SECONDS=90

# Database
DB_PATH=./data/bot.sqlite

# Campaign-scoped registry (default when no guild or --campaign is specified).
# Folder used: data/registry/<this value>/
# Use a short, lowercase slug (e.g. default, faeterra-main, pandas-dd-server).
# If you have one main campaign, set this to that slug so tools and runtime use it by default.
DEFAULT_CAMPAIGN_SLUG=default

# LLM Configuration
OPENAI_API_KEY=sk-proj-your-openai-key-here
LLM_ENABLED=true
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=200

# STT Configuration (Phase 3)
STT_PROVIDER=openai
STT_OPENAI_MODEL=gpt-4o-mini-transcribe
STT_LANGUAGE=en
STT_NORMALIZE_NAMES=true

# TTS Configuration (Phase 4)
TTS_ENABLED=false
TTS_PROVIDER=noop
TTS_OPENAI_MODEL=gpt-4o-mini-tts
TTS_VOICE=alloy
TTS_MAX_CHARS_PER_CHUNK=350

# Voice Context Windows (Phase 4)
LLM_VOICE_CONTEXT_MS=120000
VOICE_REPLY_COOLDOWN_MS=5000

# Logging Configuration
LOG_LEVEL=info                    # error|warn|info|debug|trace
LOG_SCOPES=                       # Optional: comma-separated scopes (voice,stt,tts,ledger,llm,db,session,boot,meepo)
LOG_FORMAT=pretty                 # pretty|json

# Legacy Debug Flags (DEPRECATED - use LOG_LEVEL and LOG_SCOPES instead)
# DEBUG_VOICE=false               # Deprecated: use LOG_LEVEL=debug and LOG_SCOPES=voice
