# Meepo v1.0.0 environment template
# Canonical config parser: src/config/env.ts
# Inventory baseline: runs/env-vars-unique.txt

# ===== Required to boot =====
DISCORD_TOKEN=
# Optional: elevated auth fallback role (owner/admin are always elevated)
DM_ROLE_ID=
OPENAI_API_KEY=

# ===== Core mode / logging =====
MEEPO_MODE=ambient
LOG_LEVEL=info
LOG_FORMAT=pretty
LOG_SCOPES=

# ===== Database =====
DATA_DB_PATH=./data/bot.sqlite
# DEPRECATED (remove after v1.0.0): use DATA_DB_PATH
# DB_PATH=./data/bot.sqlite

# ===== Session / channels =====
MEEPO_AUTO_SLEEP_MS=600000
ANNOUNCEMENT_CHANNEL_ID=
GUILD_ID=
DISCORD_CLIENT_ID=
BOT_PREFIX=!
DM_SPEAKER=
MEEPO_HOME_VOICE_CHANNEL_ID=
OVERLAY_VOICE_CHANNEL_ID=
OVERLAY_AUTOJOIN=false
OVERLAY_PORT=7777

# ===== Voice =====
VOICE_REPLY_COOLDOWN_MS=5000

# ===== STT =====
STT_PROVIDER=openai
STT_OPENAI_MODEL=gpt-4o-mini-transcribe
STT_LANGUAGE=en
STT_PROMPT=
STT_SAVE_AUDIO=false

# ===== TTS =====
TTS_PROVIDER=noop
TTS_ENABLED=true
TTS_OPENAI_MODEL=gpt-4o-mini-tts
TTS_VOICE=alloy
TTS_CHUNK_SIZE_CHARS=350
# DEPRECATED (remove after v1.0.0): use TTS_CHUNK_SIZE_CHARS
# TTS_MAX_CHARS_PER_CHUNK=350

# ===== Audio FX =====
AUDIO_FX_ENABLED=false
AUDIO_FX_PITCH=1.0
AUDIO_FX_REVERB=false
AUDIO_FX_REVERB_WET=0.3
AUDIO_FX_REVERB_ROOM_MS=100
AUDIO_FX_REVERB_DAMPING=0.7
AUDIO_FX_REVERB_DELAY_MS=20
AUDIO_FX_REVERB_DECAY=0.4
FFMPEG_PATH=
# DEPRECATED (remove after v1.0.0): use FFMPEG_PATH
# FFMPEG_BIN=

# ===== Feature toggles =====
MEEPO_MEMORY_ENABLED=true
GOLD_MEMORY_ENABLED=true
LLM_ENABLED=true
MEEPO_GPTCAPS_ENABLED=false
MEEPO_GPTCAPS_DIR=./data/GPTcaps
MEECAP_MODE=off

# ===== LLM behavior =====
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=350
LLM_VOICE_CONTEXT_MS=120000

# ===== Latch / debug =====
LATCH_SECONDS=120
LATCH_MAX_TURNS=6
DEBUG_ANNEAL=false
DEBUG_ELIGIBILITY=false
DEBUG_LATCH=false

# DEPRECATED (remove after v1.0.0): use LOG_LEVEL=debug with LOG_SCOPES
# DEBUG_VOICE=false